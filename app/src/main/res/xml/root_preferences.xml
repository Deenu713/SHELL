<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Terminal Settings">

        <EditTextPreference
            app:defaultValue="@string/prompt_name"
            app:key="shell_prompt_name"
            app:title="Shell Prompt Name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="shell_path"
            app:title="SHELL PATH"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="@string/shell_path" />
        <EditTextPreference
            app:key="home"
            app:title="HOME value"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Theme">

        <SwitchPreferenceCompat
            app:key="dark"
            app:title="Dark Mode"
            android:summary="Feature to be added !"/>

    </PreferenceCategory>
</PreferenceScreen>