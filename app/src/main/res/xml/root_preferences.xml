<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Terminal Settings">

        <EditTextPreference
            app:key="signature"
            app:title="Shell Prompt Name"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="signature"
            app:title="SHELL PATH"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="signature"
